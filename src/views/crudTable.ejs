<%- include('partials/_header') -%>

<div class="container" >
  <div class="titulo">
  <a class="navbar-brand offset-md-5">FORMULARIO</a>
  </div>
  <div class="row">
    <!--FORM-->
    
    <div class="col-md-5 offset-md-3" style="padding-bottom:10px">
      <div class="card">
        <div class="card-body">
          <form action="/add" method="post" >
            <div class="form-group" >
              <input class="form-control" type="text" name="codigo" placeholder="Codigo">
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="nombre" placeholder="Nombre">
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="especialidad" placeholder="Especialidad">
            </div>
            <div class="form-group">
              <input class="form-control" type="date" name="fechaNacimiento" placeholder="Fecha de Nacimiento">
            </div>
            <div class="form-group">
              <input class="form-control" type="number" name="sueldo" placeholder="Sueldo">
            </div>
            <button class="btn btn-primary" type="submit">
              Insertar
            </button>
          </form>
        </div>
      </div>
    </div>
    

    <!-- LIST -->
    <div class="col-md-15" style= "background-color: #fff;">
      <table class="table table-bordered table-hover" >
        <thead>
          <tr>
            <th>N°</th>
            <th>Código</th>
            <th>Nombre</th>
            <th>Especialidad</th>
            <th>Fecha de Nacimiento</th>
            <th>Sueldo</th>
            <th>Operaciones</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i < crud.length; i++) { %>
            <tr>
              <td><%= i + 1%></td>
              <td><strong><%= crud[i].codigo %></strong></td>
              <td><%= crud[i].nombre %></td>
              <td><%= crud[i].especialidad %></td>
              <td><%= crud[i].fechaNacimiento %></td>
              <td><%= crud[i].sueldo %></td>
              <td>
                <a href="/delete/<%= crud[i]._id %>"
                  class="btn btn-danger">
                  Borrar
                </a>
                <a href="/edit/<%= crud[i]._id %>" class="btn btn-info">
                  Editar
                </a>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>

    </div>
  </div>

</div>



<%- include('partials/_footer') -%>
