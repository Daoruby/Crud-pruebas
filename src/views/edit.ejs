<%- include('partials/_header') -%>
<div class="container">
  <div class="row">
    <!--FORM-->
    <div class="col-md-5 offset-md-3">
      <div class="card">
        <div class="card-body">
          <form action="/edit/<%= crud._id %>" method="post">
            <div class="form-group">
              <input class="form-control" type="text" name="codigo" placeholder="Codigo" value="<%= crud.codigo %>">
             </div>
              <div class="form-group">
                <input class="form-control" type="text" name="nombre" placeholder="Nombre" value="<%= crud.nombre %>">
              </div>
              <div class="form-group">
                <input class="form-control" type="text" name="especialidad" placeholder="Especialidad" value="<%= crud.especialidad %>">
              </div>
              <div class="form-group">
                <input class="form-control" type="date" name="fechaNacimiento" placeholder="Fecha de Nacimiento" value="<%= crud.fechaNacimiento %>">
              </div>
              <div class="form-group">
                <input class="form-control" type="number" name="sueldo" placeholder="Sueldo" value="<%= crud.sueldo %>">
              </div>

            <button class="btn btn-primary" type="submit">
              Update 
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>


